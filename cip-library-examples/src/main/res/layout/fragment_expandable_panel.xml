<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cip="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <it.lucichkevin.cip.expandableView.ExpandablePanel
        android:id="@+id/expandable_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cip:content="@+id/content_view"
        cip:collapsedHeight="55dp">

        <TextView
            android:id="@id/content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/lorem_ipsus" />

    </it.lucichkevin.cip.expandableView.ExpandablePanel>

</LinearLayout>