<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingStart="20dp"
	android:paddingEnd="20dp"
	android:gravity="center">

	<Button
		android:id="@+id/open_dialoghelper"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginBottom="30dp"
		android:text="Open DialogHelper" />

	<Button
		android:id="@+id/open_timepickerdialog"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginBottom="30dp"
		android:text="Open TimePickerDialog" />

	<Button
		android:id="@+id/open_minutespickerdialog"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:text="Open MinutesPickerDialog" />

</LinearLayout>