<resources>

	<!-- Base application theme. -->
	<style name="CipLibraryTheme" parent="Theme.AppCompat.Light.DarkActionBar">

		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
	</style>

	<style name="CipLibraryTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="CipLibraryTheme.DividerLine">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">#CCCCCC</item>
	</style>

	<style name="CipLibraryTheme.DividerLine.Spaced" parent="CipLibraryTheme.DividerLine">
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginBottom">10dp</item>
	</style>

</resources>
