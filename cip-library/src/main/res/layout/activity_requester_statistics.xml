<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">

	<com.google.android.material.appbar.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/CipLibraryTheme.AppBarOverlay">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize" />

	</com.google.android.material.appbar.AppBarLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="?attr/actionBarSize"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/app_logo"
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:layout_gravity="center"
			android:layout_marginTop="15dp"
			android:src="@color/white" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginTop="15dp"
			android:paddingStart="40dp"
			android:paddingEnd="40dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Dimensione delle richieste inviate" />

			<TextView
				android:id="@+id/size_of_requests_sent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#BBBBBB"
				android:text="541 Kb" />

		</LinearLayout>

		<include layout="@layout/divider_line" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingStart="40dp"
			android:paddingEnd="40dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Dimensione delle risposte ricevute" />

			<TextView
				android:id="@+id/size_of_responses_received"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#BBBBBB"
				android:text="404 Kb" />

		</LinearLayout>

		<include layout="@layout/divider_line" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingStart="40dp"
			android:paddingEnd="40dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Numero di richieste inviate" />

			<TextView
				android:id="@+id/number_of_requests_sent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#BBBBBB"
				android:text="404 richieste" />

		</LinearLayout>

		<include layout="@layout/divider_line" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingStart="40dp"
			android:paddingEnd="40dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Numero di risponse con codice 200" />

			<TextView
				android:id="@+id/number_of_response_code_200"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#BBBBBB"
				android:text="404 richieste" />

		</LinearLayout>

		<include layout="@layout/divider_line" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingStart="40dp"
			android:paddingEnd="40dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Numero di risponse con codice 301" />

			<TextView
				android:id="@+id/number_of_response_code_301"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#BBBBBB"
				android:text="404 richieste" />

		</LinearLayout>

		<include layout="@layout/divider_line" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingStart="40dp"
			android:paddingEnd="40dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Numero di risponse con codice 500" />

			<TextView
				android:id="@+id/number_of_response_code_500"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#BBBBBB"
				android:text="404 richieste" />

		</LinearLayout>

		<include layout="@layout/divider_line" />

		<Button
			android:id="@+id/btn_reset_requester_statistics"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="Reset statistics" />

	</LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>